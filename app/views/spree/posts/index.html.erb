<div class="posts" data-hook="posts-index">
  <% if @posts.blank? %>
    <h1><%= Spree.t('essential_content.no_posts') %></h1>
  <% else %>
    <%= render :partial => 'spree/shared/essential_content/preview', :collection => @posts, :as => :post %>
  <% end %>

  <%= link_to blog_posts_path(@blog, :format => 'rss'), :id => "posts-rss" do %>
    <%= image_tag 'blog/rss.png', :alt => Spree.t('essential_content.rss') %>
    <%= Spree.t('essential_content.rss') %>
  <% end %>
  <%= paginate @posts %>

</div>

<% content_for :sidebar do %>
  <%= render :partial => 'spree/shared/essential_content/sidebar' %>
<% end %>
